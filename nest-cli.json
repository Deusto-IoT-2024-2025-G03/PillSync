{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",

    "sourceRoot": "apps/api/src",
    "root": "apps/api",
    "monorepo": true,

    "compilerOptions": {
        "deleteOutDir": true,
        "tsConfigPath": "tsconfig.build.json",
        "builder": {
            "type": "swc",
            "typeCheck": true,
            "options": {
                "swcrcPath": ".swcrc"
            }
        },

        "assets": ["**/*.json", "**/*.yaml", "**/*.yml", "**/secrets/**"],
        "watchAssets": true
    },

    "projects": {
        "api": {
            "type": "application",
            "root": "apps/api",
            "entryFile": "main",
            "sourceRoot": "apps/api/src",
            "compilerOptions": {
                "tsConfigPath": "apps/api/tsconfig.app.json"
            }
        }
    }
}

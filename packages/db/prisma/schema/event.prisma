model Event {
    id String @id @default(auto()) @map("_id") @db.ObjectId

    message Message?
    melody  Melody?

    trigger  Trigger
    duration Int?

    host   Host   @relation(references: [id], fields: [hostId])
    hostId String @db.String

    slot Int

    logs Log[]

    @@index([hostId, slot])
    @@map("events")
}
